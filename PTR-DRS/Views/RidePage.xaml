<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:PTR_DRS.Models"
             xmlns:viewmodel="clr-namespace:PTR_DRS.ViewModels"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:DataType="viewmodel:RideViewModel"
             Title="{Binding Title}"
             x:Class="PTR_DRS.Views.RidePage">
    <VerticalStackLayout Spacing="20" Padding="20">
        <StackLayout Margin="10">
            <Label Text="Rit"/>
            <Grid>
                <material:TextField Text="{Binding Ride.Name ,Mode=TwoWay}"/>
            </Grid>
            <Label Text="KM" Padding="0,20,0,0"/>
            <Grid>
                <material:TextField Text="{Binding Ride.KM ,Mode=TwoWay}"/>
            </Grid>
            <Label Text="Groep" Padding="0,20,0,0"/>
            <Grid>
                <material:PickerField ItemsSource="{Binding Groups}" SelectedItem="{Binding Ride.Group}"/>
            </Grid>
            <Label Text="Datum" Padding="0,20,0,0"/>
            <Grid>
                <material:DatePickerField Date="{Binding Ride.Date}" HeightRequest="80"/>
            </Grid>
        </StackLayout>
        <Button Text="Rit aanmaken" Command="{Binding Path=AddRideCommand}"/>
    </VerticalStackLayout>
</ContentPage>